<UserControl x:Class="DNDMapViewer.MapControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DNDMapViewer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:Card Margin="5">
        <DockPanel Margin="10">
            <Label Content="Dungeons &amp; Dragons Map Viewer" DockPanel.Dock="Top"/>
            <Button Name="SelectMapBtn" Content="Select Map" Click="SelectMapBtn_Click" DockPanel.Dock="Top"/>
            <local:TokenControl x:Name="tokenControls" DockPanel.Dock="Top"/>
            <local:PaintControl DockPanel.Dock="Top"/>
            <Button Name="btnToggleMenu" Click="OnClick5" ClickMode="Hover" Content="&lt; &lt; &lt;"/>
        </DockPanel>
    </materialDesign:Card>
</UserControl>
